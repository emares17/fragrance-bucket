<div class="container py-5">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-4">
        <ol class="breadcrumb mb-0 d-flex justify-content-between">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
          <li class="breadcrumb-item active" aria-current="page"><%= name.toUpperCase() %></li>
          <div class="ml-auto">
            <a href="/users/logout" class="btn btn-secondary">Logout</a>
          </div>
        </ol>
      </nav>
    </div>
  </div>
</div>



<div class="card mb-4">
    <div class="card-body text-center">
      <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
        class="rounded-circle img-fluid" style="width: 150px;">
      <h5 class="my-3"><%= name %></h5>
      <p class="text-muted mb-1">Full Stack Developer</p>
      <p class="text-muted mb-4">Bay Area, San Francisco, CA</p>
      <div class="d-flex justify-content-center mb-2">
        <button type="button" class="btn btn-primary">Follow</button>
        <button type="button" class="btn btn-outline-primary ms-1">Message</button>
      </div>
    </div>
  </div>

  <p>Here are your posts</p>
  <% if(fragrance.length) { %>
      <table class="table table-striped">
          <thead class="thead-light">
              <tr>
                  <th>Title</th>
                  <th>Date</th>
                  <th>Status</th>
                  <th></th>
              </tr>
          </thead>
          <tbody>
              <% for(let i = 0; i < fragrance.length; i++) { %>
                  <tr>
                      <td><a href='/fragrance/<%= fragrance[i]._id %>'><%= fragrance[i].title %></a></td>
                      <td><%= fragrance[i].date %></td>
                      <td><span class="badge badge-primary"><%= fragrance[i].status %></span></td>
                      <td></td>
                  </tr>
              <% } %>
          </tbody>
      </table>
  <% } else { %>
      <p class="text-center">You have not created any stories</p>
  <% } %>

  

  <div class="fixed-action-btn">
    <a href="/fragrance/add" class="btn-floating btn-large waves-effect waves-light red"><i class="fas fa-plus"></i></a>
</div>
