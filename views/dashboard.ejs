<div class="container py-5">
  <div class="row">
    <div class="col">
      <nav class="navbar navbar-expand-sm navbar-light bg-light rounded-3 p-2 mb-1">
        <img class="mr-1" src="/images/default.png" height="75" width="75">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="#">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Dashboard</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#"><%= name %></a>
            </li>
          </ul>
          <div class="ml-auto">
            <a href="/users/logout" class="btn btn-secondary">Logout</a>
          </div>
        </div>
      </nav>
    </div>
  </div>
</div>

<div class="card mb-4 text-center">
    <div class="card-body">
      <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava3.webp" alt="avatar"
        class="rounded-circle img-fluid" style="width: 150px;">
      <h5 class="my-3"><%= name %></h5>
      <p class="text-muted mb-1">Full Stack Developer</p>
      <p class="text-muted mb-2">Bay Area, San Francisco, CA</p>
      <div class="d-flex justify-content-center">
        <div class="mr-3">
          <p class="text-muted">Followers</p>
          <p class="text-primary">120</p>
        </div>
        <div class="mr-3">
          <p class="text-muted">Posts</p>
          <p class="text-primary">50</p>
        </div>
        <div class="">
          <p class="text-muted">Following</p>
          <p class="text-primary">100</p>
        </div>
      </div>
      <div class="d-flex justify-content-center mb-2">
        <button type="button" class="btn btn-primary mr-1">Follow</button>
        <button type="button" class="btn btn-outline-primary mr-1">Message</button>
        <button type="button" class="btn btn-outline-primary">Edit</button>
      </div>
    </div>
</div>

<% if(fragrance.length) { %>

  <div class="row">
    <% for(let i = 0; i < fragrance.length; i++) { %>
      <div class="col-sm-3 mb-4">
        <div class="card" style="position: relative;">
          <img class="card-img-top" src="#" alt="Image for <%= fragrance[i].title %>">
          <div class="card-body">
            <h5 class="card-title">
              <a href='/fragrance/<%= fragrance[i]._id %>'>
                <%= fragrance[i].title %>
              </a>
            </h5>
            <p class="card-text">
              <%= fragrance[i].body %>
            </p>
          </div>
          <div class="card-footer text-right">
            <a href="#" class="btn btn-link p-0 pr-1">
              <i class="fas fa-edit"></i>
            </a>
            <!-- <a href="/<%= fragrance[i]._id %>" class="btn btn-link p-0" id="delete-post">
              <i class="fas fa-trash-alt"></i>
            </a> -->
            <form action="/fragrance/<%= fragrance[i]._id %>" method="POST" id="delete-form">
              <input type="hidden" name="_method" value="DELETE">
              <button type="submit" class="btn btn-link p-0 pr-1">
                  <i class="fas fa-trash"></i>
              </button>
          </form>
          </div>
        </div>
      </div>
    <% } %>
  </div>
<% } else { %>
  <p class="text-center">You have not created any stories</p>
<% } %>

<div class="fixed-action-btn">
    <a href="/fragrance/add" class="btn-floating btn-large waves-effect waves-light red"><i class="ml-3 fas fa-plus"></i></a>
</div>

